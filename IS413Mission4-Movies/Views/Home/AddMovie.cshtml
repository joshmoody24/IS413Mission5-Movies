@{
    ViewData["Title"] = "Add Movie";
}

@model Movie

<h1>Add New Movie</h1>

<form method="post">
    <label asp-for="Title">Title:</label>
    <input class="form-control" asp-for="Title" />
    <br />

    <label asp-for="Year">Year:</label>
    <input type="number" class="form-control" asp-for="Year" />
    <br />

    <label asp-for="Director">Director:</label>
    <input class="form-control" asp-for="Director" />
    <br />

    <label asp-for="Category">Category:</label>
    <select class="form-control" asp-for="CategoryId">
        <option value="" disabled selected hidden>Select Category</option>
        @foreach (Category c in ViewBag.Categories)
            {
                <option value=@c.CategoryId>@c.CategoryName</option>
            }
    </select>
    <br />

    <label asp-for="Rating">Rating:</label>
    <select class="form-control" asp-for="Rating">
        <option value="null" disabled selected hidden>Select Rating</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />

    <label asp-for="Edited">Edited:</label>
    <select class="form-control" asp-for="Edited">
        <option value="false">No</option>
        <option value="true">Yes</option>
    </select>
    <br />

    <label asp-for="LentTo">Lent to:</label>
    <input class="form-control" asp-for="LentTo" />
    <br />

    <label asp-for="Notes">Notes:</label>
    <textarea class="form-control" asp-for="Notes"></textarea>
    <br />

    <button class="btn btn-primary" type="submit">Add Movie</button>

    <div asp-validation-summary="All"></div>
</form>